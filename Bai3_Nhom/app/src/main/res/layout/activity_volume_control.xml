<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    tools:context=".VolumeControlActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điều Chỉnh Âm Lượng"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/volumeImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@android:drawable/ic_menu_sort_by_size"
        android:tint="#4CAF50"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nghiêng thiết bị để điều chỉnh âm lượng:\n- Nghiêng trái: Tăng âm lượng\n- Nghiêng phải: Giảm âm lượng"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/volumeImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đang kiểm tra cảm biến..."
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="#FF5722"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/instructionTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/currentVolumeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Âm lượng hiện tại: 0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/statusTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
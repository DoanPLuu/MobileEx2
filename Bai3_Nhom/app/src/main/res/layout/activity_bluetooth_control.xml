<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context=".BluetoothControlActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điều Khiển Tai Nghe Bluetooth"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#0277BD"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/headphoneImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@android:drawable/stat_sys_data_bluetooth"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điều khiển tai nghe:\n- Xoay phải: Bài tiếp theo\n- Xoay trái: Bài trước đó\n- Lắc lên xuống: Phát/Tạm dừng"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/headphoneImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đang kiểm tra cảm biến và Bluetooth..."
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="#D32F2F"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/instructionTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>